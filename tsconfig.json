{
  "compilerOptions": {
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "compileOnSave": false
}